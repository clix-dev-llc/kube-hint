{
  "extends": ["standard"],
  "plugins": ["standard", "flowtype", "security"],
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "flowtype/require-valid-file-annotation": 0,
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-return-assign": 0,
    "require-await": 0,
    "quotes": ["error", "single"],
    "no-return-await": 0,
    "no-unused-vars": [
      1,
      {
        "vars": "all",
        "args": "none",
        "varsIgnorePattern": "^(React$|_)"
      }
    ],
    "standard/computed-property-even-spacing": 0,
    "camelcase": 0,
    "object-curly-spacing": ["error", "always"]
  }
}
